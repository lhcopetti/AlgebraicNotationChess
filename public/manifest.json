{
    "name": "Lichess via Keyboard",
    "description": "Play chess using the algebraic notation",
    "version": "1.0",
    "manifest_version": 3,

    "background": {
        "service_worker": "backgroundScript.js"
    },
    "content_scripts": [
        {
            "matches": [ "https://lichess.org/*" ],
            "js": [ 
                "contentScript.js"
            ]
        }
    ],
    "permissions": [
    ],
    "web_accessible_resources": [
        {
            "resources": [ "src/js/*" ],
            "matches": [ "<all_urls>" ]
        }
    ]
}
